{
  "extends": [
    "dienerld/node"
  ],
  "overrides": [
    {
      "files": [
        "*.tsx"
      ],
      "extends": [
        "dienerld/react"
      ]
    }
  ],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto",
        "singleQuote": true,
        "trailingComma": "all",
        "tabWidth": 2,
        "semi": true,
        "printWidth": 100
      },
      {
        "usePrettierrc": false
      }
    ]
  }
}
